                <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Hyperlink NavigateUri="https://www.zonneveld.com/" TextDecorations="None" RequestNavigate="Hyperlink_RequestNavigate">
                        <Image x:Name="logoImage" Source="https://www.zonneveld.com/images/Zonneveld_logo_web.png" Height="100" Width="200" Stretch="Uniform" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <ScaleTransform x:Name="imageScaleTransform"/>
                            </Image.RenderTransform>
                            <Image.Triggers>
                                <EventTrigger RoutedEvent="Image.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="imageScaleTransform" Storyboard.TargetProperty="ScaleX" To="0.9" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="imageScaleTransform" Storyboard.TargetProperty="ScaleY" To="0.9" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="Image.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="imageScaleTransform" Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="imageScaleTransform" Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Image.Triggers>
                        </Image>
                    </Hyperlink>
                </TextBlock>

                <!--CLOSE-->
                <Button Content="Close" Grid.Column="2" Width="60" Height="20" Margin="0,0,10,0" FontSize="10" Click="button_close" VerticalAlignment="Center" HorizontalAlignment="Right" Background="Transparent" Foreground="White" BorderBrush="Transparent"/>

